<div class="column is-half">
  <% if user_signed_in? %>
  <article class="media box">
    <figure class="media-left">
      <p class="image is-64x64">
        	<%= gravatar_image_tag(current_user.email, size: 64, alt: current_user.name) %>
      </p>
    </figure>
    <div class="media-content">
      <%= render 'tuits/form' %>
    </div>
  </article>
  <% end %>

  <% @tuits.each do | tuit | %>
  <div class="box">
    <article class="media">
      <div class="media-left">
        <figure class="image is-64x64">
          	<%= gravatar_image_tag(tuit.user.email, size: 64, alt: tuit.user.name) %>
        </figure>
      </div>
      <div class="media-content">
        <div class="content">
          <strong><%= tuit.user.name %></strong><br />
          <small><%= tuit.user.username %></small><br />
          <p><%= tuit.tuit %></p>
        </div>
        <nav class="level">
          <div class="level-left is-mobile">
            <%= link_to tuit, class: "level-item" do %>
            <span class="icon"><i class="fa fa-link" aria-hidden="true"></i></span>
            <% end %>
            <%= link_to edit_tuit_path(tuit), class: "level-item" do %>
            <span class="icon"><i class="fa fa-pencil" aria-hidden="true"></i></span>
            <% end %>
            <%= link_to tuit, method: :delete, data: {confirm: 'Are you sure you want to delete this tuit?' 
          } do %>
            <span class="icon"><i class="fa fa-trash-o" aria-hidden="true"></i></span>
            <% end %>
          </div>
        </nav>
      </div>
    </article>
  </div>
  <% end %>
</div>